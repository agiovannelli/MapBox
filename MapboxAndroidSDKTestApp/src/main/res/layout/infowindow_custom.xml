<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/button_material_light"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:onClick="openContactDialog">

        <TextView
            android:id="@+id/customTooltip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:text="@string/toolTipTitle" />

        <TextView
            android:id="@+id/customTooltip_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:text="@string/toolTipDescription"/>
        </LinearLayout>

        <TextView
            android:id="@+id/customTooltip_Navigate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:text="@string/toolTipNavigate" />

    </LinearLayout>

</LinearLayout>
