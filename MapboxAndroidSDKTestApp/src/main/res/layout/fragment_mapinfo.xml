<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/button_material_light"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:id="@+id/customTooltip_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/toolTipTitle"/>

        <TextView
            android:id="@+id/customTooltip_Description"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="30sp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:text="@string/toolTipDescription"/>

        <TextView
            android:layout_gravity="start"
            android:layout_weight="1"
            android:id="@+id/customTooltip_Navigate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="@string/toolTipNavigate"/>

    </LinearLayout>

</LinearLayout>